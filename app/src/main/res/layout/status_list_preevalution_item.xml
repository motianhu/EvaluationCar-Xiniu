<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">


    <ImageView
        android:id="@+id/carImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/status_list_item_arrow"
        style="@style/setting_item_arrow_style" />


    <RelativeLayout
        android:id="@+id/topContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/carImage"
        android:layout_toStartOf="@+id/status_list_item_arrow">

        <TextView
            android:id="@+id/carNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/normalNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/chengse"
            android:textSize="10sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/carTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/carImage"
        android:layout_toStartOf="@+id/status_list_item_arrow"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/carImage"
        android:layout_toStartOf="@+id/status_list_item_arrow">

        <TextView
            android:id="@+id/carStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/red"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnSubmitCarbill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/submit_evaluation"
            android:textColor="@color/green"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>
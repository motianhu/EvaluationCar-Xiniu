<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/home_fragment_nosubmit"
            android:textColor="@color/black_text"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/local_refresh"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:src="@drawable/refresh"
            android:layout_height="25dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bg_gray"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/search"
            android:layout_width="160dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/search_bg"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/search_icon"
            android:hint="@string/search_billid_hint"
            android:paddingEnd="0dp"
            android:paddingStart="10dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/filter"
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/filter_btn_bg"
            android:drawableEnd="@drawable/arraw_down"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:text="@string/select_all"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/div_white" />

    <com.smona.app.xiniueval.ui.status.nosubmit.NoSubmitLayer
        android:id="@+id/local_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"
        android:descendantFocusability="beforeDescendants"
        android:gravity="center_horizontal">

        <include layout="@layout/refresh_head" />

        <com.smona.app.xiniueval.ui.status.nosubmit.NoSubmitListView
            android:id="@+id/local_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:divider="@color/bg_gray"
            android:dividerHeight="5dp"
            android:overScrollMode="never" />

        <include layout="@layout/refresh_load_more" />

        <include layout="@layout/refresh_network_tip" />

        <include layout="@layout/refresh_center_loading" />
    </com.smona.app.xiniueval.ui.status.nosubmit.NoSubmitLayer>
</LinearLayout>